
<form action="<%=cat_rental_requests_url%>" method="POST">


  <label for="color">Cat Selection</label>

    <select name="cat_rental_requests[cat_id]" id="color">
      <% @allcats.each do |cat|  %>
      <option value= '<%=cat.id%>'> '<%=cat.name%>'</option>
      <% end %>
    </select>
  <br>
  <input type ="date" name = "cat_rental_requests[start_date]" value="<%=@catrentalrequest.start_date%>">
  <br><br>
  <input type ="date" name = "cat_rental_requests[end_date]" value="<%=@catrentalrequest.end_date%>">
  <br><br>

  <input type="submit" value="Choose Cat">

</form>
